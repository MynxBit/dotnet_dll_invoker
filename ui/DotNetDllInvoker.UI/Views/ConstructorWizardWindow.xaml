<Window x:Class="DotNetDllInvoker.UI.Views.ConstructorWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Constructor Wizard" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackground}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Create Instance" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
            <TextBlock Text="{Binding FullTypeName}" Foreground="{StaticResource TextMuted}" FontFamily="Consolas"/>
        </StackPanel>
        
        <!-- Constructor Selector -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Select Constructor" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Constructors}" SelectedItem="{Binding SelectedConstructor}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="{Binding SelectedConstructorSignature}" Foreground="{StaticResource TextMuted}" FontSize="11" Margin="0,3,0,0" FontFamily="Consolas"/>
        </StackPanel>
        
        <!-- Parameters Header -->
        <TextBlock Grid.Row="2" Text="Parameters" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
        
        <!-- Parameter List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Parameters}" ItemTemplateSelector="{StaticResource ParameterSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Empty State -->
        <TextBlock Grid.Row="3" Text="No parameters required" 
                   Foreground="{StaticResource TextMuted}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   FontStyle="Italic">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Parameters.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" IsCancel="True" Width="80" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="Create" IsDefault="True" Width="80" Click="OnCreate_Click" Style="{StaticResource DangerButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
